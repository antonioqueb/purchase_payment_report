<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_payment_report_wizard" model="ir.ui.view">
        <field name="name">purchase.payment.report.wizard.form</field>
        <field name="model">purchase.payment.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Reporte de Pagos a Proveedor">
                <group>
                    <field name="report_type" widget="radio"/>
                </group>
                <group attrs="{'invisible': [('report_type', '!=', 'partner')]}">
                    <field name="partner_id" required="report_type == 'partner'"/>
                </group>
                <group attrs="{'invisible': [('report_type', '!=', 'order')]}">
                    <field name="order_ids" widget="many2many_tags" required="report_type == 'order'"/>
                </group>
                <group string="Filtro de Fechas (Opcional)">
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button name="action_print_report" string="Generar Reporte" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_purchase_payment_report_wizard" model="ir.actions.act_window">
        <field name="name">Reporte de Pagos a Proveedor</field>
        <field name="res_model">purchase.payment.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
