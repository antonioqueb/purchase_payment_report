<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================================
         Vista GENERAL (desde el menú de Reportes)
         Muestra tabs: Por Proveedor / Por Pedido
    ============================================================ -->
    <record id="view_purchase_payment_report_wizard" model="ir.ui.view">
        <field name="name">purchase.payment.report.wizard.form</field>
        <field name="model">purchase.payment.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Reporte de Pagos a Proveedor">
                <div class="o_form_view" style="background: #f5f7fa; min-height: 100%;">

                    <!-- Header decorativo -->
                    <div style="
                        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
                        padding: 28px 32px 24px;
                        margin: -1px -1px 0;
                        border-radius: 4px 4px 0 0;
                    ">
                        <div style="display: flex; align-items: center; gap: 16px;">
                            <div style="
                                background: rgba(255,255,255,0.12);
                                border-radius: 12px;
                                padding: 12px;
                                display: flex;
                                align-items: center;
                                justify-content: center;
                            ">
                                <i class="fa fa-file-text-o" style="font-size: 28px; color: #64b5f6;"/>
                            </div>
                            <div>
                                <h3 style="
                                    color: #ffffff;
                                    margin: 0 0 4px;
                                    font-size: 20px;
                                    font-weight: 700;
                                    letter-spacing: 0.5px;
                                ">Reporte de Pagos a Proveedor</h3>
                                <p style="
                                    color: rgba(255,255,255,0.6);
                                    margin: 0;
                                    font-size: 13px;
                                ">Genera reportes de estado de cuenta por proveedor o por pedido específico</p>
                            </div>
                        </div>
                    </div>

                    <!-- Tabs de tipo de reporte -->
                    <div style="
                        background: #ffffff;
                        border-bottom: 2px solid #e8eaf0;
                        padding: 0 32px;
                        display: flex;
                        gap: 0;
                    ">
                        <!-- Tab Por Proveedor -->
                        <div style="
                            padding: 14px 24px;
                            cursor: pointer;
                            display: flex;
                            align-items: center;
                            gap: 8px;
                            font-weight: 600;
                            font-size: 13px;
                            border-bottom: 3px solid transparent;
                            margin-bottom: -2px;
                            transition: all 0.2s;
                            color: #555;
                        "
                        onclick="
                            var radios = document.querySelectorAll('[name=report_type] input');
                            radios.forEach(r => r.value === 'partner' ? r.click() : null);
                        ">
                            <i class="fa fa-building-o" style="font-size: 14px;"/>
                            Estado de Cuenta por Proveedor
                        </div>
                        <!-- Tab Por Pedido -->
                        <div style="
                            padding: 14px 24px;
                            cursor: pointer;
                            display: flex;
                            align-items: center;
                            gap: 8px;
                            font-weight: 600;
                            font-size: 13px;
                            border-bottom: 3px solid transparent;
                            margin-bottom: -2px;
                            transition: all 0.2s;
                            color: #555;
                        "
                        onclick="
                            var radios = document.querySelectorAll('[name=report_type] input');
                            radios.forEach(r => r.value === 'order' ? r.click() : null);
                        ">
                            <i class="fa fa-shopping-cart" style="font-size: 14px;"/>
                            Por Pedido de Compra
                        </div>
                    </div>

                    <!-- Campo oculto para el tipo -->
                    <div style="display: none;">
                        <field name="report_type"/>
                        <field name="from_order"/>
                    </div>

                    <!-- Contenido: Por Proveedor -->
                    <div style="padding: 28px 32px;" invisible="report_type != 'partner'">

                        <!-- Card: Proveedor -->
                        <div style="
                            background: #ffffff;
                            border: 1px solid #e0e4ed;
                            border-radius: 10px;
                            padding: 24px;
                            margin-bottom: 20px;
                            box-shadow: 0 1px 6px rgba(0,0,0,0.05);
                        ">
                            <div style="
                                display: flex;
                                align-items: center;
                                gap: 10px;
                                margin-bottom: 16px;
                                padding-bottom: 12px;
                                border-bottom: 1px solid #f0f2f8;
                            ">
                                <div style="
                                    background: #e3f2fd;
                                    border-radius: 8px;
                                    padding: 8px;
                                    display: flex;
                                    align-items: center;
                                ">
                                    <i class="fa fa-user-o" style="color: #1976d2; font-size: 16px;"/>
                                </div>
                                <div>
                                    <div style="font-weight: 700; font-size: 14px; color: #1a1a2e;">Proveedor</div>
                                    <div style="font-size: 11px; color: #888;">Opcional — sin selección incluye todos los proveedores</div>
                                </div>
                            </div>
                            <field name="partner_id"
                                   options="{'no_create': True}"
                                   placeholder="Todos los proveedores (sin filtro)"
                                   style="font-size: 14px;"/>
                        </div>

                        <!-- Card: Filtro de Fechas -->
                        <div style="
                            background: #ffffff;
                            border: 1px solid #e0e4ed;
                            border-radius: 10px;
                            padding: 24px;
                            box-shadow: 0 1px 6px rgba(0,0,0,0.05);
                        ">
                            <div style="
                                display: flex;
                                align-items: center;
                                gap: 10px;
                                margin-bottom: 18px;
                                padding-bottom: 12px;
                                border-bottom: 1px solid #f0f2f8;
                            ">
                                <div style="
                                    background: #f3e5f5;
                                    border-radius: 8px;
                                    padding: 8px;
                                    display: flex;
                                    align-items: center;
                                ">
                                    <i class="fa fa-calendar" style="color: #7b1fa2; font-size: 16px;"/>
                                </div>
                                <div>
                                    <div style="font-weight: 700; font-size: 14px; color: #1a1a2e;">Período</div>
                                    <div style="font-size: 11px; color: #888;">Filtro de fechas opcional por fecha de pedido</div>
                                </div>
                            </div>
                            <div style="display: flex; gap: 24px;">
                                <div style="flex: 1;">
                                    <label style="
                                        display: block;
                                        font-size: 11px;
                                        font-weight: 700;
                                        text-transform: uppercase;
                                        color: #666;
                                        letter-spacing: 0.5px;
                                        margin-bottom: 6px;
                                    ">Desde</label>
                                    <field name="date_from" nolabel="1"/>
                                </div>
                                <div style="flex: 1;">
                                    <label style="
                                        display: block;
                                        font-size: 11px;
                                        font-weight: 700;
                                        text-transform: uppercase;
                                        color: #666;
                                        letter-spacing: 0.5px;
                                        margin-bottom: 6px;
                                    ">Hasta</label>
                                    <field name="date_to" nolabel="1"/>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Contenido: Por Pedido -->
                    <div style="padding: 28px 32px;" invisible="report_type != 'order'">

                        <!-- Card: Pedido -->
                        <div style="
                            background: #ffffff;
                            border: 1px solid #e0e4ed;
                            border-radius: 10px;
                            padding: 24px;
                            margin-bottom: 20px;
                            box-shadow: 0 1px 6px rgba(0,0,0,0.05);
                        ">
                            <div style="
                                display: flex;
                                align-items: center;
                                gap: 10px;
                                margin-bottom: 16px;
                                padding-bottom: 12px;
                                border-bottom: 1px solid #f0f2f8;
                            ">
                                <div style="
                                    background: #e8f5e9;
                                    border-radius: 8px;
                                    padding: 8px;
                                    display: flex;
                                    align-items: center;
                                ">
                                    <i class="fa fa-shopping-cart" style="color: #388e3c; font-size: 16px;"/>
                                </div>
                                <div>
                                    <div style="font-weight: 700; font-size: 14px; color: #1a1a2e;">Pedido de Compra</div>
                                    <div style="font-size: 11px; color: #888;">Selecciona el pedido a reportar</div>
                                </div>
                            </div>
                            <field name="order_id"
                                   options="{'no_create': True}"
                                   placeholder="Selecciona un pedido..."
                                   required="report_type == 'order'"/>
                        </div>

                        <!-- Card: Filtro de Fechas -->
                        <div style="
                            background: #ffffff;
                            border: 1px solid #e0e4ed;
                            border-radius: 10px;
                            padding: 24px;
                            box-shadow: 0 1px 6px rgba(0,0,0,0.05);
                        ">
                            <div style="
                                display: flex;
                                align-items: center;
                                gap: 10px;
                                margin-bottom: 18px;
                                padding-bottom: 12px;
                                border-bottom: 1px solid #f0f2f8;
                            ">
                                <div style="
                                    background: #f3e5f5;
                                    border-radius: 8px;
                                    padding: 8px;
                                    display: flex;
                                    align-items: center;
                                ">
                                    <i class="fa fa-calendar" style="color: #7b1fa2; font-size: 16px;"/>
                                </div>
                                <div>
                                    <div style="font-weight: 700; font-size: 14px; color: #1a1a2e;">Período</div>
                                    <div style="font-size: 11px; color: #888;">Filtro de fechas opcional</div>
                                </div>
                            </div>
                            <div style="display: flex; gap: 24px;">
                                <div style="flex: 1;">
                                    <label style="
                                        display: block;
                                        font-size: 11px;
                                        font-weight: 700;
                                        text-transform: uppercase;
                                        color: #666;
                                        letter-spacing: 0.5px;
                                        margin-bottom: 6px;
                                    ">Desde</label>
                                    <field name="date_from" nolabel="1"/>
                                </div>
                                <div style="flex: 1;">
                                    <label style="
                                        display: block;
                                        font-size: 11px;
                                        font-weight: 700;
                                        text-transform: uppercase;
                                        color: #666;
                                        letter-spacing: 0.5px;
                                        margin-bottom: 6px;
                                    ">Hasta</label>
                                    <field name="date_to" nolabel="1"/>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <footer style="
                    background: #f5f7fa;
                    border-top: 1px solid #e0e4ed;
                    padding: 16px 32px;
                    display: flex;
                    align-items: center;
                    gap: 12px;
                ">
                    <button name="action_print_report"
                            string="Generar Reporte PDF"
                            type="object"
                            class="btn btn-primary"
                            style="
                                padding: 10px 24px;
                                font-weight: 700;
                                font-size: 14px;
                                display: flex;
                                align-items: center;
                                gap: 8px;
                            ">
                        <i class="fa fa-file-pdf-o"/>  Generar Reporte PDF
                    </button>
                    <button string="Cancelar"
                            class="btn btn-secondary"
                            special="cancel"
                            style="padding: 10px 20px; font-size: 14px;"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- ============================================================
         Vista SIMPLIFICADA desde una orden de compra
         Solo muestra filtro de fechas, el pedido ya viene fijo
    ============================================================ -->
    <record id="view_purchase_payment_report_wizard_from_order" model="ir.ui.view">
        <field name="name">purchase.payment.report.wizard.form.from.order</field>
        <field name="model">purchase.payment.report.wizard</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <form string="Reporte de Pagos — Pedido Actual">
                <div class="o_form_view">

                    <!-- Header -->
                    <div style="
                        background: linear-gradient(135deg, #1a1a2e 0%, #0f3460 100%);
                        padding: 24px 28px;
                        margin: -1px -1px 0;
                        border-radius: 4px 4px 0 0;
                    ">
                        <div style="display: flex; align-items: center; gap: 14px;">
                            <div style="
                                background: rgba(255,255,255,0.12);
                                border-radius: 10px;
                                padding: 10px;
                            ">
                                <i class="fa fa-file-text-o" style="font-size: 24px; color: #64b5f6;"/>
                            </div>
                            <div>
                                <h3 style="
                                    color: #ffffff;
                                    margin: 0 0 4px;
                                    font-size: 18px;
                                    font-weight: 700;
                                ">Reporte de Pagos</h3>
                                <div style="display: flex; align-items: center; gap: 8px;">
                                    <span style="
                                        background: rgba(100,181,246,0.2);
                                        border: 1px solid rgba(100,181,246,0.4);
                                        color: #64b5f6;
                                        padding: 2px 10px;
                                        border-radius: 12px;
                                        font-size: 12px;
                                        font-weight: 600;
                                    ">
                                        <i class="fa fa-shopping-cart" style="margin-right: 4px;"/>
                                        <field name="order_id" readonly="1" nolabel="1" style="display: inline; color: inherit; background: none; border: none; padding: 0; font-weight: 600;"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Campos ocultos necesarios -->
                    <div style="display: none;">
                        <field name="report_type"/>
                        <field name="from_order"/>
                    </div>

                    <!-- Cuerpo: solo fechas -->
                    <div style="padding: 24px 28px;">
                        <div style="
                            background: #ffffff;
                            border: 1px solid #e0e4ed;
                            border-radius: 10px;
                            padding: 24px;
                            box-shadow: 0 1px 6px rgba(0,0,0,0.05);
                        ">
                            <div style="
                                display: flex;
                                align-items: center;
                                gap: 10px;
                                margin-bottom: 18px;
                                padding-bottom: 12px;
                                border-bottom: 1px solid #f0f2f8;
                            ">
                                <div style="
                                    background: #f3e5f5;
                                    border-radius: 8px;
                                    padding: 8px;
                                ">
                                    <i class="fa fa-calendar" style="color: #7b1fa2; font-size: 16px;"/>
                                </div>
                                <div>
                                    <div style="font-weight: 700; font-size: 14px; color: #1a1a2e;">Filtro de Fechas</div>
                                    <div style="font-size: 11px; color: #888;">Opcional — sin fechas incluye todos los registros del pedido</div>
                                </div>
                            </div>
                            <div style="display: flex; gap: 24px;">
                                <div style="flex: 1;">
                                    <label style="
                                        display: block;
                                        font-size: 11px;
                                        font-weight: 700;
                                        text-transform: uppercase;
                                        color: #666;
                                        letter-spacing: 0.5px;
                                        margin-bottom: 6px;
                                    ">Desde</label>
                                    <field name="date_from" nolabel="1"/>
                                </div>
                                <div style="flex: 1;">
                                    <label style="
                                        display: block;
                                        font-size: 11px;
                                        font-weight: 700;
                                        text-transform: uppercase;
                                        color: #666;
                                        letter-spacing: 0.5px;
                                        margin-bottom: 6px;
                                    ">Hasta</label>
                                    <field name="date_to" nolabel="1"/>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <footer style="
                    background: #f5f7fa;
                    border-top: 1px solid #e0e4ed;
                    padding: 16px 28px;
                    display: flex;
                    gap: 12px;
                ">
                    <button name="action_print_report"
                            string="Generar Reporte PDF"
                            type="object"
                            class="btn btn-primary"
                            style="padding: 10px 24px; font-weight: 700; font-size: 14px;"/>
                    <button string="Cancelar"
                            class="btn btn-secondary"
                            special="cancel"
                            style="padding: 10px 20px; font-size: 14px;"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción general (para el menú de Reportes) -->
    <record id="action_purchase_payment_report_wizard" model="ir.actions.act_window">
        <field name="name">Reporte de Pagos a Proveedor</field>
        <field name="res_model">purchase.payment.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_purchase_payment_report_wizard"/>
    </record>

    <!-- Acción simplificada desde la orden -->
    <record id="action_purchase_payment_report_wizard_from_order" model="ir.actions.act_window">
        <field name="name">Reporte de Pagos</field>
        <field name="res_model">purchase.payment.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_purchase_payment_report_wizard_from_order"/>
    </record>
</odoo>