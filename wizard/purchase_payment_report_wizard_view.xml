<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================================
         Vista GENERAL (desde el menú de Reportes)
    ============================================================ -->
    <record id="view_purchase_payment_report_wizard" model="ir.ui.view">
        <field name="name">purchase.payment.report.wizard.form</field>
        <field name="model">purchase.payment.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Reporte de Pagos a Proveedor">

                <!-- Header decorativo -->
                <div style="background: linear-gradient(135deg, #1a1a2e 0%, #0f3460 100%); padding: 28px 32px 24px; border-radius: 4px 4px 0 0;">
                    <div style="display: flex; align-items: center; gap: 16px;">
                        <div style="background: rgba(255,255,255,0.12); border-radius: 12px; padding: 12px;">
                            <i class="fa fa-file-text-o" style="font-size: 28px; color: #64b5f6;"/>
                        </div>
                        <div>
                            <div style="color: #ffffff; font-size: 20px; font-weight: 700; letter-spacing: 0.5px; margin-bottom: 4px;">Reporte de Pagos a Proveedor</div>
                            <div style="color: rgba(255,255,255,0.6); font-size: 13px;">Genera reportes de estado de cuenta por proveedor o por pedido específico</div>
                        </div>
                    </div>
                </div>

                <!-- Tipo de reporte -->
                <div style="background: #ffffff; padding: 24px 32px 0;">
                    <group>
                        <field name="report_type" widget="radio"/>
                        <field name="from_order" invisible="1"/>
                    </group>
                </div>

                <!-- Contenido: Por Proveedor -->
                <div style="padding: 20px 32px;" invisible="report_type != 'partner'">

                    <!-- Card: Proveedor -->
                    <div style="background: #ffffff; border: 1px solid #e0e4ed; border-radius: 10px; padding: 24px; margin-bottom: 20px; box-shadow: 0 1px 6px rgba(0,0,0,0.05);">
                        <div style="display: flex; align-items: center; gap: 10px; margin-bottom: 16px; padding-bottom: 12px; border-bottom: 1px solid #f0f2f8;">
                            <div style="background: #e3f2fd; border-radius: 8px; padding: 8px;">
                                <i class="fa fa-building-o" style="color: #1976d2; font-size: 16px;"/>
                            </div>
                            <div>
                                <div style="font-weight: 700; font-size: 14px; color: #1a1a2e;">Proveedor</div>
                                <div style="font-size: 11px; color: #888;">Opcional — sin selección incluye todos los proveedores</div>
                            </div>
                        </div>
                        <group>
                            <field name="partner_id" options="{'no_create': True}" placeholder="Todos los proveedores (sin filtro)"/>
                        </group>
                    </div>

                    <!-- Card: Fechas -->
                    <div style="background: #ffffff; border: 1px solid #e0e4ed; border-radius: 10px; padding: 24px; box-shadow: 0 1px 6px rgba(0,0,0,0.05);">
                        <div style="display: flex; align-items: center; gap: 10px; margin-bottom: 16px; padding-bottom: 12px; border-bottom: 1px solid #f0f2f8;">
                            <div style="background: #f3e5f5; border-radius: 8px; padding: 8px;">
                                <i class="fa fa-calendar" style="color: #7b1fa2; font-size: 16px;"/>
                            </div>
                            <div>
                                <div style="font-weight: 700; font-size: 14px; color: #1a1a2e;">Período</div>
                                <div style="font-size: 11px; color: #888;">Filtro de fechas opcional por fecha de pedido</div>
                            </div>
                        </div>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                    </div>
                </div>

                <!-- Contenido: Por Pedido -->
                <div style="padding: 20px 32px;" invisible="report_type != 'order'">

                    <!-- Card: Pedido -->
                    <div style="background: #ffffff; border: 1px solid #e0e4ed; border-radius: 10px; padding: 24px; margin-bottom: 20px; box-shadow: 0 1px 6px rgba(0,0,0,0.05);">
                        <div style="display: flex; align-items: center; gap: 10px; margin-bottom: 16px; padding-bottom: 12px; border-bottom: 1px solid #f0f2f8;">
                            <div style="background: #e8f5e9; border-radius: 8px; padding: 8px;">
                                <i class="fa fa-shopping-cart" style="color: #388e3c; font-size: 16px;"/>
                            </div>
                            <div>
                                <div style="font-weight: 700; font-size: 14px; color: #1a1a2e;">Pedido de Compra</div>
                                <div style="font-size: 11px; color: #888;">Selecciona el pedido a reportar</div>
                            </div>
                        </div>
                        <group>
                            <field name="order_id" options="{'no_create': True}" placeholder="Selecciona un pedido..." required="report_type == 'order'"/>
                        </group>
                    </div>

                    <!-- Card: Fechas -->
                    <div style="background: #ffffff; border: 1px solid #e0e4ed; border-radius: 10px; padding: 24px; box-shadow: 0 1px 6px rgba(0,0,0,0.05);">
                        <div style="display: flex; align-items: center; gap: 10px; margin-bottom: 16px; padding-bottom: 12px; border-bottom: 1px solid #f0f2f8;">
                            <div style="background: #f3e5f5; border-radius: 8px; padding: 8px;">
                                <i class="fa fa-calendar" style="color: #7b1fa2; font-size: 16px;"/>
                            </div>
                            <div>
                                <div style="font-weight: 700; font-size: 14px; color: #1a1a2e;">Período</div>
                                <div style="font-size: 11px; color: #888;">Filtro de fechas opcional</div>
                            </div>
                        </div>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                    </div>
                </div>

                <footer>
                    <button name="action_print_report" string="Generar Reporte PDF" type="object" class="btn btn-primary"/>
                    <button string="Cancelar" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- ============================================================
         Vista SIMPLIFICADA desde una orden de compra
    ============================================================ -->
    <record id="view_purchase_payment_report_wizard_from_order" model="ir.ui.view">
        <field name="name">purchase.payment.report.wizard.form.from.order</field>
        <field name="model">purchase.payment.report.wizard</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <form string="Reporte de Pagos — Pedido Actual">

                <!-- Header -->
                <div style="background: linear-gradient(135deg, #1a1a2e 0%, #0f3460 100%); padding: 24px 28px; border-radius: 4px 4px 0 0;">
                    <div style="display: flex; align-items: center; gap: 14px;">
                        <div style="background: rgba(255,255,255,0.12); border-radius: 10px; padding: 10px;">
                            <i class="fa fa-file-text-o" style="font-size: 24px; color: #64b5f6;"/>
                        </div>
                        <div>
                            <div style="color: #ffffff; font-size: 18px; font-weight: 700; margin-bottom: 6px;">Reporte de Pagos</div>
                            <div style="background: rgba(100,181,246,0.2); border: 1px solid rgba(100,181,246,0.4); border-radius: 12px; padding: 3px 12px; display: inline-block;">
                                <field name="order_id" readonly="1" nolabel="1" style="color: #64b5f6; font-weight: 600; font-size: 12px;"/>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Campos ocultos -->
                <field name="report_type" invisible="1"/>
                <field name="from_order" invisible="1"/>

                <!-- Cuerpo: solo fechas -->
                <div style="padding: 24px 28px;">
                    <div style="background: #ffffff; border: 1px solid #e0e4ed; border-radius: 10px; padding: 24px; box-shadow: 0 1px 6px rgba(0,0,0,0.05);">
                        <div style="display: flex; align-items: center; gap: 10px; margin-bottom: 16px; padding-bottom: 12px; border-bottom: 1px solid #f0f2f8;">
                            <div style="background: #f3e5f5; border-radius: 8px; padding: 8px;">
                                <i class="fa fa-calendar" style="color: #7b1fa2; font-size: 16px;"/>
                            </div>
                            <div>
                                <div style="font-weight: 700; font-size: 14px; color: #1a1a2e;">Filtro de Fechas</div>
                                <div style="font-size: 11px; color: #888;">Opcional — sin fechas incluye todos los registros del pedido</div>
                            </div>
                        </div>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                    </div>
                </div>

                <footer>
                    <button name="action_print_report" string="Generar Reporte PDF" type="object" class="btn btn-primary"/>
                    <button string="Cancelar" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción general (para el menú de Reportes) -->
    <record id="action_purchase_payment_report_wizard" model="ir.actions.act_window">
        <field name="name">Reporte de Pagos a Proveedor</field>
        <field name="res_model">purchase.payment.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_purchase_payment_report_wizard"/>
    </record>

    <!-- Acción simplificada desde la orden -->
    <record id="action_purchase_payment_report_wizard_from_order" model="ir.actions.act_window">
        <field name="name">Reporte de Pagos</field>
        <field name="res_model">purchase.payment.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_purchase_payment_report_wizard_from_order"/>
    </record>
</odoo>